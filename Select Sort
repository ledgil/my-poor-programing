/*

Select Sort

*/
#include"iostream"
#include"stdlib.h"
#include"time.h"
using namespace std;
void sort(int a[],int n) 
{
	
	int j; 
	int min;
	int temp;
	for(int i=0;i<n;i++)
	{
		min=i;
		for(j=i+1;j<n;j++)
		{
			if(a[j]<a[min])
			min=j;			
		}
		if(min!=i) 
		{		
			temp=a[min];
			a[min]=a[i];
			a[i]=temp;			
		}
	}
	cout<<"sort is:"<<endl;
	for(int b=0;b<n;b++)
	{
		cout<<a[b]<<" ";
	}
}

int main()
 {	
 	int t;
 	int a[10];
 	srand(time(0));    					
	cout<<"Numembers are:"<<endl;	     
		for(int i=0;i<10;i++)		
 	{									
 		t = 1+rand()%100 ;  	   		
 		a[i]=t;
 		cout<<t<<" ";
	 }
	 cout<<endl;
	 sort(a,10);
	 return 0; 																	
 }
