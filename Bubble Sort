/*

Bubble Sort

*/

#include"iostream"
#include"stdlib.h"
#include"time.h"
using namespace std;

void sort(int a[],int n)
 {	
 	int temp;  //intermediate variable
 	bool sigh; //a sign that whether the programing will process
 	for(int i=0;i<n-1;i++)  
 	{
 		int j=0;
 		do                     
 		{
 			sigh=0;
 			if(a[j]<a[j-1])
 			{
 				
 				temp=a[j-1];
 				a[j-1]=a[j];
 				a[j]=temp;
 				sigh=1;
			 }
			 j++;
		 }while(sigh=1&&j<n);
	 }
	 cout<<"The result of the bubble sort is :"<<endl;
	 for(int s=0;s<n;s++)
	 {
	 	cout<<a[s]<<"  ";
	} 
 }
 
 int main()
 {	
 	int t;
 	int a[10];
 	srand(time(0));
	cout<<"Numembers are:"<<endl;
		for(int i=0;i<10;i++)
 	{
 		t = 1+rand()%100 ;
 		a[i]=t;
 		cout<<t<<" ";
	 }
	 cout<<endl;
	 sort(a,10);
	 return 0; 
 }
